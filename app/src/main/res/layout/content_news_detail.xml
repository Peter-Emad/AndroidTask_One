<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_news_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.peter.androidtask_one.NewsDetailActivity"
    tools:showIn="@layout/activity_news_detail"
    android:background="@drawable/f_level"
    >

    <ImageView
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/d_IVnews"
        android:layout_width="379dp"
        android:layout_height="250dp"
        android:scaleType="fitXY"
        android:background="@drawable/rounded_newsimage"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/d_TVitemdesc"
        app:layout_constraintHorizontal_bias="0.46"
        app:layout_constraintVertical_bias="0.0" />

    <LinearLayout
        android:layout_width="379dp"
        android:layout_height="70dp"
        android:background="#ff0000"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/d_TVitemdesc"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.62">

    </LinearLayout>

    <TextView
        android:id="@+id/d_TVdate"
        android:textColor="#ffffff"
        android:layout_height="35dp"
        android:layout_width="wrap_content"
        android:layout_marginStart="32dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/d_TVitemdesc" />

    <TextView
        android:layout_width="70dp"
        android:layout_height="35dp"
        android:id="@+id/d_TVlikes"
        android:textColor="#ffffff"
        android:layout_marginStart="60dp"
        app:layout_constraintLeft_toRightOf="@+id/d_TVdate"
        app:layout_constraintRight_toLeftOf="@+id/d_IVviews"
        android:layout_marginEnd="8dp"
        app:layout_constraintHorizontal_bias="0.16"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/d_TVitemdesc" />

    <TextView
        android:layout_width="64dp"
        android:layout_height="35dp"
        android:id="@+id/d_TVviews"
        android:textColor="#ffffff"
        android:layout_marginEnd="32dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp" />

    <ImageView
        android:layout_width="30dp"
        app:srcCompat="@drawable/views_icon"
        android:id="@+id/d_IVviews"
        android:layout_height="35dp"
        app:layout_constraintRight_toLeftOf="@+id/d_TVviews"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="4dp"
        app:layout_constraintLeft_toRightOf="@+id/d_IVlikes"
        app:layout_constraintHorizontal_bias="0.95"

        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="16dp" />

    <ImageView
        android:layout_width="30dp"
        app:srcCompat="@drawable/like_unclicked"
        android:id="@+id/d_IVlikes"
        android:layout_height="35dp"
        app:layout_constraintBottom_toBottomOf="@+id/d_TVitemdesc"
        android:layout_marginTop="10dp"
        android:layout_marginStart="25dp"
        app:layout_constraintLeft_toRightOf="@+id/d_TVdate"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="378dp"
        android:id="@+id/d_TVitemdesc"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="16dp"
        android:background="#e2ffffff"
        android:textColor="#000000"
        android:layout_height="251dp"
        android:textStyle="bold"
        android:textSize="13sp"
        android:padding="15dp"
        />

</android.support.constraint.ConstraintLayout>
